<Window
    x:Class="task_List.Forms.AdminWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:task_List.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AdminWindow"
    Width="200"
    Height="200"
    mc:Ignorable="d">
    <Grid Margin="0,0,0,0" >
        <Button x:Name="Add" Content="Add" HorizontalAlignment="Left"  Margin="62,53,0,0" VerticalAlignment="Top" Width="75" Click="Add_Click"/>
        <Button x:Name="Edit" Content="Edit" HorizontalAlignment="Left" Margin="62,80,0,0" VerticalAlignment="Top" Width="75" Click="Edit_Click"/>
        <Button x:Name="Delete" Content="Delete" HorizontalAlignment="Left" Margin="62,107,0,0" VerticalAlignment="Top" Width="75" Click="Delete_Click"/>
    </Grid>
</Window>
