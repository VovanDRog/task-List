<Window
    x:Class="task_List.Forms.LoginForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginForm"
    Width="427.5"
    Height="384"
    mc:Ignorable="d"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    >
    <Grid Margin="0, 0, 2, 0">
        <TextBox
            x:Name="loginTextBox"
            Height="50"
            Margin="62,78,66,0"
            VerticalAlignment="Top"
            TextWrapping="Wrap" 
            FontSize="30" 
            FontFamily="Times New Roman"
            Foreground="Black" 
            TextChanged="Login_TextChanged"
        />

        <TextBox
            x:Name="passwordTextBox"
            Height="50"
            Margin="63,173,65,0"
            VerticalAlignment="Top"
            TextWrapping="Wrap"
            Text=""
            FontSize="30" 
            FontFamily="Times New Roman" 
            Foreground="Black"
            TextChanged="Password_TextChanged"
        />

        <Button
            x:Name="loginButton"
            Height="44"
            Margin="134,284,134,0"
            VerticalAlignment="Top"
            Click="LoginButton_Click"
            Content="SUBMIT"
            FontFamily="Times New Roman"
            FontSize="22" 
            FontWeight="Bold" 
        />

        <Label 
            x:Name="loginErrorLabel" 
            HorizontalAlignment="Left" 
            Margin="63,128,0,0"
            VerticalAlignment="Top" 
            Height="29"
            Width="289"
            Content="Login is incorrect" Foreground="Red"
        />

        <Label 
            x:Name="passwordErrorLabel"  
            HorizontalAlignment="Left" 
            Margin="63,228,0,0"
            VerticalAlignment="Top" 
            Height="26" 
            Width="289"
            Content="Password is incorrect" Foreground="Red"
        />

        <Label 
            FontSize="30" 
            FontFamily="Times New Roman" 
            Foreground="Black"
            HorizontalContentAlignment ="Center"
            HorizontalAlignment="Left" 
            Margin="62,10,0,0"
            VerticalAlignment="Top" 
            Height="50"
            Width="289"
            Content="LOGIN" 
            FontWeight="Bold"
        />
        <Label 
            FontSize="30" 
            FontFamily="Times New Roman"
            Foreground="#FFBFB3B3" 
            x:Name="login_placeholder" 
            HorizontalAlignment="Left" 
            Margin="63,78,0,0"
            VerticalAlignment="Top" 
            Height="50"
            Width="143"
            Content="Email"
        />
        <Label 
            FontSize="30" 
            FontFamily="Times New Roman"
            Foreground="#FFA0A0A0" 
            x:Name="password_placeholder" 
            HorizontalAlignment="Left" 
            Margin="63,173,0,0"
            VerticalAlignment="Top" 
            Height="50"
            Width="143"
            Content="Password"
        />

    </Grid>
</Window>
