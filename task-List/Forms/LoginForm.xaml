<Window
    x:Class="task_List.Forms.LoginForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginForm"
    Width="427.5"
    Height="363"
    mc:Ignorable="d">
    <Grid Margin="0,0,2,0">
        <TextBox
            x:Name="Login"
            Width="242"
            Height="50"
            Margin="92,22,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="Password"
            Width="242"
            Height="50"
            Margin="92,116,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <Button
            x:Name="loginButton"
            Width="150"
            Height="44"
            Margin="138,252,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="LoginButton_Click"
            Content="Submit" />
    </Grid>
</Window>
